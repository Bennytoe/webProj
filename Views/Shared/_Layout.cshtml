<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - webdb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/webdb.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="header">
        <div id="logo">
            <a asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/logo_2.png" alt="logo">
            </a>
        </div>
        <nav class="navbar">
            <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            @if (User.Identity.IsAuthenticated)
            {
               @*  if (User.IsInRole("Admin")) {
                    <a asp-area="" asp-controller="Event" asp-action="Create">Create Event</a>
                } *@
            }
            else
            {
                <a asp-area="" asp-controller="User" asp-action="Login"><b>Login</b></a>
                <a asp-area="" asp-controller="User" asp-action="Register"><b>Register</b></a>
            }
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - webdb - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
